{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
    "complexity": ["error", 10],
    "curly": ["error", "all"],
    "operator-linebreak": ["error", "after"]
  }
}
